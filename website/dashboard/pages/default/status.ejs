</style>
     
                             <div class="status-panel-page-nomargin">
                 <% if (apistatus == true) { %>
                  
<div class="ServerStatusPanel">
  <div class="ServerStatusPanelPageTitle">
  <div class="PanelTitle undefined">Nova api</div>
    <div class="ServerStatusPageTitleContent statusStable"> 
    <div class="ServerStatusPageTitleText"> 
    <div class="Panel ServerStatusPanelItem ServerStatusPanelRefreshing hidden">
      <div class="LoadingDots">
      <div></div>
        <div></div>
        <div></div>
        <div></div>
      </div>
    </div>
      <div class="Panel ServerStatusPanelItem ServerStatusPanelPing">
        <tspan>
        Server Offline
        </tspan>
      </div>
        <div class="Panel ServerStatusPanelItem ServerStatusPanelStatusText">
          <tspan>
            Offline
          </tspan>
        </div>
        </div>
    </div>
    <div id="phg"></div></br>
    <script>
      var data = [
  ["1", 1, 0, 0],
  ["2", 2, 0, 0],  
  ["3", 3, 0, 0],
  ["4", 4, 0, 0],
          ["5", 5, 0, 0],
  ["6", 6, 0, 0]
];
        anychart.onDocumentReady(function() {
          var dataSet = anychart.data.set(data);

// map the data for all series
var firstSeriesData = dataSet.mapAs({x: 0, value: 1});
var secondSeriesData = dataSet.mapAs({x: 0, value: 2});
var thirdSeriesData = dataSet.mapAs({x: 0, value: 3});
          var chart = anychart.line();

// create the series and name them
var firstSeries = chart.line(firstSeriesData);
firstSeries.name("Ping");

          // add a legend
chart.legend().enabled(true);
  
// add a title
chart.title("Ping History (Work In Progress)");
          chart.container("phg");
  
// draw the resulting chart
chart.draw()
  });
    </script>
    </div>
    </div>
  </div>
</div>              
                 <% } else if (apistatus == false) { %>
<div class="ServerStatusPanel">
  <div class="ServerStatusPanelPageTitle">
  <div class="PanelTitle undefined">Nova api</div>
    <div class="ServerStatusPageTitleContent statusStable"> 
    <div class="ServerStatusPageTitleText"> 
    <div class="Panel ServerStatusPanelItem ServerStatusPanelRefreshing hidden">
      <div class="LoadingDots">
      <div></div>
        <div></div>
        <div></div>
        <div></div>
      </div>
    </div>
      <div class="Panel ServerStatusPanelItem ServerStatusPanelPing">
        <tspan>
          <%=apidat%>
        </tspan>
      </div>
        <div class="Panel ServerStatusPanelItem ServerStatusPanelStatusText">
          <tspan>
            Stable
          </tspan>
        </div>
        </div>
    </div>
    </div>
  </div>
                   
    <div id="phg"></div>
    <script>
      var data = [
  ["1", 1, 0, 0],
  ["2", 2, 0, 0],  
  ["3", 3, 0, 0],
  ["4", 4, 0, 0],
          ["5", 5, 0, 0],
  ["6", 6, 0, 0]
];
        anychart.onDocumentReady(function() {
          var dataSet = anychart.data.set(data);

// map the data for all series
